try{
	node{
    stage('Git Checkout'){
		git credentialsId: 'github', 
		    url: 'https://github.com/c5232936/maven-git-enkins',
			branch: "${params.gitBranch}"
	}
	
	stage('Maven Build'){
		sh 'mvn clean package'
	}
	stage('Deploy to Dev'){
		sh 'mv target/*.war target/myweb.war'
		sshagent(['tomcat-dev']) {
			sh 'ssh 192.168.65.157 rm -rf /opt/tomcat8/webapps/myweb*'
		    sh 'scp target/myweb.war user1@192.168.65.157:/opt/tomcat8/webapps/'
		    sh 'ssh user1@192.168.65.157 sudo service tomcat restart'
		}
	    slackSend channel: '#devops-2',
				  color: 'good',
				  message: "Job -  ${env.JOB_NAME}, Completed successfully Build URL is ${env.BUILD_URL}"


	}
}

}catch(error){
  slackSend channel: '#devops-2',
				  color: 'danger',
				  message: "Job -  ${env.JOB_NAME}, Failed, Build URL is ${env.BUILD_URL}"
   error 'Something wrong'
}
